extends layout

block content
  .container
    legend Login
    form(role='form', action="/login", method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="email", placeholder='Enter email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Enter password')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
    br
    a(href='/forgot') Password Reset
    br

    br
    if message
      message
